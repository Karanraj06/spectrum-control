// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Band {
  id      String @id @default(cuid())
  from    Int
  to      Int
  spacing Int
  name    String
}

model Frequency {
  value     Int      @id
  userId    String
  email     String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())

  @@index([userId])
}

model FrequencyLocation {
  id        String   @id @default(cuid())
  value     Int
  latitude  Float
  longitude Float
  userId    String
  email     String
  createdAt DateTime @default(now())

  @@index([value])
  @@index([latitude, longitude])
}
