// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Band {
  id      String @id @default(cuid())
  from    Int
  to      Int
  spacing Int
  name    String
}

model Frequency {
  value     Int                 @id
  userId    String
  email     String
  createdAt DateTime            @default(now())
  locations FrequencyLocation[]

  @@index([userId])
}

model Location {
  latitude    Float
  longitude   Float
  frequencies FrequencyLocation[]

  @@id([latitude, longitude])
}

model FrequencyLocation {
  frequency         Frequency @relation(fields: [frequencyValue], references: [value])
  frequencyValue    Int
  location          Location  @relation(fields: [locationLatitude, locationLongitude], references: [latitude, longitude])
  locationLatitude  Float
  locationLongitude Float
  userId            String
  email             String
  createdAt         DateTime  @default(now())

  @@id([frequencyValue, locationLatitude, locationLongitude])
  @@index([frequencyValue])
  @@index([locationLatitude, locationLongitude])
}
